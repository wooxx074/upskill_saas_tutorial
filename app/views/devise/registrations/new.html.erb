<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= hidden_field_tag 'plan', params[:plan] %> 
      
      <% if params[:plan] == '1' %>
        <h2 class="text-center">Basic Account Sign Up</h2>
        <p class="text-center">Sign up for free and get basic access to the community!</p>
          <div class="well">
            <%= render "basic_form" %>
          </div>
          
        <% elsif params[:plan] == '2' %>
        <h2 class="text-center">Pro Account Sign Up</h2>
        <p class="text-center">Sign up for the pro account for $10/month and get access to the community and contact information!</p>
          <div class="well">
            <%= render "pro_form" %>
          </div>
      <% end %>
        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>